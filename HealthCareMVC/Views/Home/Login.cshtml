@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>HealthCare | Login</title>
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css?family=Acme|Lobster+Two" rel="stylesheet" />
    <link href="~/Contents/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Contents/css/site-style.css" rel="stylesheet" />
    <style>
        .forms {
            padding-top: 12%;
            color: white;
            min-height: 100vh;
        }
        .form-overlay {
            padding-bottom: 5%;
            padding-top: 5%;
        }
        .btn-login {
            margin-right: 10px;
        }
        #myModal {
            color: black;
        }
        .modal-body {
            padding: 5% 10% 5% 10%;
        }
        .modal-body input {
            border: 1px solid lightgrey;
        }
    </style>
</head>
<body class="register-body">
    <div class="login-page-overlay">
        <div class="container forms">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-overlay">

                        <center>
                            <h2>Login and start Using Healthcare</h2>
                        </center>
                        <br />

                        @if (TempData["errorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Error! </strong> @TempData["errorMessage"]
                            </div>
                        }
                        @if (TempData["successMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade in">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Success! </strong> @TempData["successMessage"]
                            </div>
                        }

                        @using (Html.BeginForm("LoginRequest", "Home"))
                        {
                            <div class="form-group">
                                <label class="control-label col-sm-4" for="email">Email:</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                        <input id="txtEmail" name="txtEmail" required="required" type="email" class="form-control" placeholder="Enter Email" />
                                    </div>
                                </div>
                            </div>
                            <br /><br />
                            <div class="form-group">
                                <label class="control-label col-sm-4" for="password">Password:</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input id="txtPassword" name="txtPassword" required="required" type="password" class="form-control" placeholder="Enter Password" />
                                    </div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="form-group">
                                <div class="col-sm-4 control-label">
                                    <a href="#" data-toggle="modal" data-target="#myModal">Forgot your password?</a>
                                </div>
                                <div class="col-sm-8">
                                    <input type="submit" class="btn btn-primary btn-login" value="Login Now" />
                                    <a href="/Register" class="btn btn-success">Register Now</a>
                                </div>
                            </div>
                        }
                        <br /><br />
                        <center> &copy; copyright Healthcare - @DateTime.Now.Year </center>
                    </div>

                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">

                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <center><h4 class="modal-title">Forgot your password?</h4></center>
                                </div>
                                @using (Html.BeginForm("", "Home"))
                                {
                                    <div class="modal-body">

                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                                <input id="txtCurrentPassword" name="txtCurrentPassword" required="required" type="password" class="form-control" placeholder="Enter Current Password" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                                <input id="txtNewPassword" name="txtNewPassword" required="required" type="password" class="form-control" placeholder="Enter New Password" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                                <input id="txtConfirmNewPassword" name="txtConfirmNewPassword" required="required" type="password" class="form-control" placeholder="Confirm New Password" />
                                            </div>
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Create New Password</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
                <br />
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
